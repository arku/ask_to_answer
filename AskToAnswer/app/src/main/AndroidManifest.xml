<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arun.asktoanswer" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".GroupListActivity"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name=".CreateGroupActivity"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name=".DisplayGroupActivity"
            android:label="@string/title_activity_display_group" >
        </activity>
        <activity
            android:name=".DisplayQuestionActivity"
            android:label="@string/title_activity_display_question" >
        </activity>
        <activity
            android:name=".EnterGroupActivity"
            android:label="@string/title_activity_enter_group" >
        </activity>
        <activity
            android:name=".CreateQuestion"
            android:label="@string/title_activity_create_question" >
        </activity>
        <activity
            android:name=".CreateQuestionActivity"
            android:label="@string/title_activity_create_question" >
        </activity>
    </application>

</manifest>
